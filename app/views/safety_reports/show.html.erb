<%- model_class = SafetyReport -%>
<div class="page-header">
  <h1><%=t '.title', :default => SafetyReport %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:report_title) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.report_title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:report_description) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.report_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:report_date) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.report_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:incident_location) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.incident_location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hazard_category) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.hazard_category %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:damage_category) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.damage_category %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:third_party_type) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.third_party_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:third_party_name) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.third_party_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:risk_probability) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.risk_probability %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:risk_consequense) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.risk_consequense %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:risk_level) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.risk_level %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reported_by) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.reported_by %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:download_report) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.download_report %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:attachment) %></dt>
      <dd><pre class="prettyprint"><%= @safety_report.attachment %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              safety_reports_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_safety_report_path(@safety_report), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              safety_report_path(@safety_report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

